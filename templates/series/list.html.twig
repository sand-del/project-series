{% extends 'base.html.twig' %}

{% block body %}
    <h2>Series List</h2>
    <div class="flex_between">
        {% if currentPage > 1 %}
            <a href="{{ path('series_list', {'page': currentPage - 1 }) }}">Previous page</a>
        {% endif %}
        {% if currentPage < maxPages %}
        <a href="{{ path('series_list', {'page': currentPage + 1 }) }}">Next page</a>
        {% endif %}
    </div>

    <section class="series-list">

        {% for serie in series %}
            <article>
                <a href="{{ path('series_detail', {'id' : serie.id }) }}" title="{{ serie.name }} * {{ serie.seasons | length }} seasons">
                    <img src="{{ asset('images/posters/series/' ~ serie.poster) }}" alt="{{ serie.name }}">
                </a>
            </article>

        {% endfor %}

    </section>

{% endblock %}